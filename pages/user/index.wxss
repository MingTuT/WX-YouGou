page {
    background-color: #edece8;
}

.user-info-wrap {
    height: 45vh;
    overflow: hidden;
    background-color: var(--themeColor);
    position: relative;
}

.user-img-wrap {
    position: relative;
}

.user-bg {
    height: 50vh;
    filter: blur(10rpx);
}

.user-info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
}

.user-icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.user-name {
    color: #fff;
    margin-top: 40rpx;
}

.user-btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    border: 1rpx solid greenyellow;
    color: greenyellow;
    font-size: 38rpx;
    padding: 30rpx;
    border-radius: 10rpx;
}

.user-content {
    position: relative;
}

.user-main {
    position: absolute;
    padding-bottom: 100rpx;
    color: #666;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40rpx;
}

.history-wrap {
    background-color: #fff;
    display: flex;
}

.history-wrap navigator {
    flex: 1;
    text-align: center;
    padding: 10rpx 0;

}

.his-num {
    color: var(--themeColor);
}

.orders-wrap {
    background-color: #fff;
    margin-top: 30rpx;
}

.orders-title {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.order-content {
    display: flex;
}

.order-content navigator {
    padding: 15rpx 0;
    flex: 1;
    text-align: center;
}

.order-content navigator .iconfont {
    color: var(--themeColor);
    font-size: 40rpx;
}

.address-wrap {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx ;
}

.app-info-wrap {
    margin-top: 30rpx;
    background-color: #fff;
}

.app-info-item {
    padding: 20rpx ;
    border-bottom: 1rpx solid #ccc;
}

.app-info-content {
    display: flex;
    justify-content: space-between;
}

.recommend-wrap {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx ;
}