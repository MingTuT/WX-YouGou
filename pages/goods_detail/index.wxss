page {
    padding-bottom: 90rpx;
  }

.detail-swiper swiper {
    height: 70vw;
    text-align: center;
}

.detail-swiper swiper image {
    width: 60%;
}

.goods-price {
    padding: 15rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: var(--themeColor);
}

.goods-name-row {
    display: flex;
    border-top: 5rpx solid #dedede;
    border-bottom: 10rpx solid #dedede;
    padding: 10rpx 0;
}

.goods-name {
    flex: 5;
    color: #000;
    font-size: 30rpx;
    padding: 0 10rpx;

    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods-collect {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left: 1rpx solid #ccc;
}

.goods-info-title {
    font-size: 32rpx;
    color: var(--themeColor);
    font-weight: 600;
    padding: 20rpx;
}

.btm-tool {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 90rpx;
    background-color: #fff;
    display: flex;
}

.tool-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    position: relative;
}

.tool-item button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
  }

.btn-cart {
    flex: 2;
    background-color: #ffa500;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}

.btn-buy {
    flex: 2;
    background-color: #eb4450;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}

.icon-shoucang1 {
    color: orangered;
  }